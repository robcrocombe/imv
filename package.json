{
  "name": "imv",
  "description": "Interactive file mover inspired by git",
  "version": "1.3.0",
  "license": "MIT",
  "author": "Rob Crocombe <me@robcrocombe.com> (http://robcrocombe.com)",
  "homepage": "https://github.com/robcrocombe/imv#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robcrocombe/imv.git"
  },
  "bugs": {
    "url": "https://github.com/robcrocombe/imv/issues"
  },
  "main": "./src/index.js",
  "bin": {
    "imv": "./dist/cli.js"
  },
  "scripts": {
    "dist": "tsc",
    "lint": "eslint --format=node_modules/eslint-codeframe-formatter --max-warnings=0 \"./{src,tests}/**/*.ts\"",
    "prepublishOnly": "npm run validate && npm run dist",
    "start": "tsc -w",
    "test": "jest -i --watch",
    "test-once": "jest -i",
    "validate": "npm run lint && npm run test-once"
  },
  "dependencies": {
    "chalk": "4.1.1",
    "commander": "7.2.0",
    "delete-empty": "3.0.0",
    "fs-extra": "9.1.0",
    "git-config-path": "2.0.0",
    "globby": "11.0.3",
    "ini": "2.0.0",
    "normalize-path": "3.0.0",
    "tmp": "0.2.1",
    "trash": "7.1.1"
  },
  "devDependencies": {
    "@jest/test-sequencer": "24.9.0",
    "@types/fs-extra": "8.1.0",
    "@types/git-config-path": "2.0.0",
    "@types/ini": "1.3.30",
    "@types/jest": "24.0.23",
    "@types/mock-fs": "4.10.0",
    "@types/normalize-path": "3.0.0",
    "@types/rimraf": "2.0.3",
    "@types/tmp": "0.2.0",
    "@typescript-eslint/eslint-plugin": "2.6.1",
    "@typescript-eslint/parser": "2.6.1",
    "eslint": "6.6.0",
    "eslint-codeframe-formatter": "1.0.2",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "23.0.3",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.4.3",
    "minimatch": "3.0.4",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.1.0",
    "typescript": "3.9.7"
  },
  "keywords": [
    "directory",
    "file",
    "file system",
    "fs",
    "git",
    "interactive",
    "move",
    "mv",
    "recursive"
  ],
  "engines": {
    "node": ">=10.x"
  },
  "files": [
    "dist/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "cacheDirectory": "./node_modules/.cache/jest",
    "setupFilesAfterEnv": [
      "./tests/setup.ts"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/tests/temp"
    ],
    "testSequencer": "./tests/sequencer.js"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
