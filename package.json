{
  "name": "imv",
  "version": "1.0.0",
  "description": "Interactive file mover inspired by git",
  "main": "./src/index.js",
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "imv": "./dist/cli.js"
  },
  "engines": {
    "node": ">=10.x"
  },
  "scripts": {
    "start": "tsc -w",
    "dist": "tsc",
    "prepublishOnly": "npm run lint && npm run dist",
    "lint": "eslint --format=node_modules/eslint-codeframe-formatter ./{src,tests}/**/*.ts",
    "test": "jest --watch",
    "test-ci": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robcrocombe/imv.git"
  },
  "author": "Rob Crocombe <me@robcrocombe.com> (http://robcrocombe.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robcrocombe/imv/issues"
  },
  "homepage": "https://github.com/robcrocombe/imv#readme",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest",
    "globalSetup": "./tests/setup.ts",
    "cacheDirectory": "./node_modules/.cache/jest"
  },
  "devDependencies": {
    "@types/fs-extra": "8.0.0",
    "@types/jest": "24.0.19",
    "@types/mock-fs": "3.6.30",
    "@types/tmp": "0.1.0",
    "@typescript-eslint/eslint-plugin": "2.4.0",
    "@typescript-eslint/parser": "2.4.0",
    "eslint": "6.5.1",
    "eslint-codeframe-formatter": "1.0.2",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.19.0",
    "jest": "24.9.0",
    "mock-fs": "4.10.2",
    "ts-jest": "24.1.0"
  },
  "dependencies": {
    "@types/git-config-path": "2.0.0",
    "@types/ini": "1.3.30",
    "chalk": "2.4.2",
    "commander": "3.0.2",
    "fs-extra": "8.1.0",
    "git-config-path": "2.0.0",
    "globby": "10.0.1",
    "ini": "1.3.5",
    "open": "6.4.0",
    "readline-sync": "1.4.10",
    "tmp": "0.1.0",
    "typescript": "3.6.4"
  },
  "keywords": [
    "fs",
    "file",
    "file system",
    "directory",
    "recursive",
    "mv",
    "git",
    "interactive",
    "move"
  ]
}
